<div class="signup-body-wrapper">

    <div class="text-center" id="signup-header">
        <h2>New to Bookish? Create a free account!</h2>
    </div>
    <div class="field is-grouped is-grouped-centered">
        <form class="signup">
            <div class="form-group">
                <label for="exampleInputEmail1">Your email address will be your username</label>
                <input type="email" class="form-control" id="email-input" placeholder="Email">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Create a new password</label>
                <input type="password" class="form-control" id="password-input" placeholder="Password">
            </div>
            <div class="buttons is-centered">
                <button type="submit" class="button bookish-primary" id="signup-button" href="/trending">
                    <strong>Sign up</strong>
                </button>
            </div>
        </form>
    </div>
</div>