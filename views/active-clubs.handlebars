<div class="body-wrapper-color">
    <div class="body-mat">
        <h1 class="page-title">All Clubs</h1>
        <div id="active-clubs-padding">
            {{#each reversedClubArray}}
            <div class="club-card-container">
                <div class="club-card columns">

                    <div class="column is-one-fourth book-info-div"><img class="book-cover" src="{{this.image}}">
                        <p class="book-title">{{this.bookTitle}}</p>
                        <br>
                        <p class="book-author">Author: {{this.bookAuthor}}</p>

                        <p class="book-year">Year: {{this.bookYear}}</p>

                    </div>

                    <div class="column club-info-div">
                        <p class="club-name">
                        <h2>Club name:
                            {{this.clubName}}
                        </h2>
                        </p>
                        <br>
                    </div>

                    <div class="column is-one-fifth join-club-div"><button data-id="{{this.id}}"
                            class="button join-club-button bookish-primary">Join Club</button>
                    </div>
                </div>

            </div>
            {{/each}}</div>
    </div>
</div>