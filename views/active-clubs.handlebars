<div class="body-wrapper-color">
    <div class="body-mat">
        <h1 class="page-title">All Clubs</h1>
        {{#each reversedClubArray}}
        <div id="club-card-container">
            <div class="club-card columns">
                
                <div class="column is-one-fourth book-info-div"><img class="book-cover"
                        src="{{image}}">
                    <p class="book-title">Book Title: {{this.book}}</p>
                    <br>
                    <p class="book-title">Book Id: {{this.bookId}}</p>
                    <br>
                    <p class="book-author">Author</p>
                    <p class="book-genre">Genre</p>
                    <p class="book-year">Year</p>

                </div>

                <div class="column club-info-div">
                    <p class="club-name">Club name: {{this.name}}</p>
                    <br>
                    <p class="club-name">Club Id: {{this.id}}</p>
                    <p class="progress-bar-label">Progress bar label</p>
                    <progress class="progress" value="20" max="100">Progress
                    </progress>
                    <p>This row is hard coded. Remove before deployment.</p>
                </div>

                <div class="column is-one-fifth join-club-div"><button class="button">Join Club</button>
                </div>
            </div>

        </div>
        {{/each}}
    </div>
</div>