<div class="body-wrapper-color">
    <div class="body-mat">
        <h1 class="page-title">All Clubs</h1>
        <div id="active-clubs-padding">
            {{#each reversedClubArray}}
            <div class="club-card-container">
                <div class="club-card columns">

                    <div class="column is-one-fourth book-info-div"><img class="book-cover" src="{{this.image}}">
                        <h2 class="book-title">{{this.bookTitle}}</h2>
                        <br>
                        <p>Author:
                        <h3 class="book-author"> {{this.bookAuthor}}</h3>
                        </p>

                        <p class="book-year">Year: {{this.bookYear}}</p>

                    </div>
                    <div class="column club-info-div">
                        <p>Club name: </p>
                        <h1 class="club-name">{{this.clubName}}</h1>
                        <br>
                    </div>
                    <div class="column is-one-fifth join-club-div"><button
                            class="button bookish-primary join-club-button" data-id="{{this.id}}">Join This
                            Club</button><button data-id="{{this.id}}"
                            class="button delete-club-button bookish-primary">Delete This
                            Club</button>
                        {{!-- <div class="column is-one-fifth delete-club-div">
                        </div> --}}
                    </div>

                </div>

            </div>
            {{/each}}
        </div>
    </div>
</div>